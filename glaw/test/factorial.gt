proc factorial_recurse(val int num, ref int ret)
begin
    if num = 0 then
        ret := 1;
    else
        call factorial_recurse(num-1, ret);
        ret := num * ret;
    fi
end

proc factorial()
    int num;
    int ans;
begin
    num := 5;
    ans := 1;
    call factorial_recurse(num, ans);
    write "factorial of ";
    write num;
    write " is ";
    write ans;
    write "\n";
end

proc main()
begin
    write "Hello, this is a factorial.\n";
    call factorial();
end