proc matrix_add()
    int matrix_a[2, 2];
    int matrix_b[2, 2];
    int matrix_c[2, 2];
    int n;
    int i;
    int j;
    int value;
begin
    # matrix_a = [[12, 10], [3, 9]]
    matrix_a[0, 0] := 12;
    matrix_a[0, 1] := 10;
    matrix_a[1, 0] := 3;
    matrix_a[1, 1] := 9;
    write "matrix_a = [[12, 10], [3, 9]]\n";

    # matrix_b = [[3, 4], [7, 4]]
    matrix_a[0, 0] := 3;
    matrix_a[0, 1] := 4;
    matrix_a[1, 0] := 7;
    matrix_a[1, 1] := 4;
    write "matrix_b = [[3, 4], [7, 4]]\n";

    n := 2;
    i := 0;
    while (i < n) do
        j := 0;
        while (j < n) do
            value := matrix_a[i, j] + matrix_b[i, j];
            matrix_c[i, j] := value;
            j := j + 1;
        od
        i := i + 1;
    od

    write "matrix_a + matrix_b = [";
    write "[";
    write matrix_c[0, 0];
    write ", ";
    write matrix_c[0, 1];
    write "], [";
    write matrix_c[1, 0];
    write ", ";
    write matrix_c[1, 1];
    write "]]";
end

proc matrix_mul()
    int matrix_a[2, 2];
    int matrix_b[2, 2];
    int matrix_c[2, 2];
    int n;
    int i;
    int j;
    int k;
    int value;
begin
    # matrix_a = [[12, 10], [3, 9]]
    matrix_a[0, 0] := 12;
    matrix_a[0, 1] := 10;
    matrix_a[1, 0] := 3;
    matrix_a[1, 1] := 9;
    write "matrix_a = [[12, 10], [3, 9]]\n";

    # matrix_b = [[3, 4], [7, 4]]
    matrix_a[0, 0] := 3;
    matrix_a[0, 1] := 4;
    matrix_a[1, 0] := 7;
    matrix_a[1, 1] := 4;
    write "matrix_b = [[3, 4], [7, 4]]\n";

    n := 2;
    i := 0;
    while (i < n) do
        j := 0;
        while (j < n) do
            value := 0;
            k := 0;
            while (k < n) do
                value := value + matrix_a[i, k] * matrix_b[k, j];
                k := k + 1;
            od
            matrix_c[i, j] := value;
            j := j + 1;
        od
        i := i + 1;
    od

    write "matrix_a * matrix_b = [";
    write "[";
    write matrix_c[0, 0];
    write ", ";
    write matrix_c[0, 1];
    write "], [";
    write matrix_c[1, 0];
    write ", ";
    write matrix_c[1, 1];
    write "]]";
end

proc main()
begin
    write "Hello, this is a matrix.\n";
    call matrix_add();
    call matrix_mul();
end